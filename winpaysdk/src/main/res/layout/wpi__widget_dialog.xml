<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/wpi__padding_medium">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/wpi__panel_rounded_primary"
        android:orientation="vertical"
        android:padding="@dimen/wpi__padding_medium"
        tools:ignore="UselessParent">

        <TextView
            android:id="@+id/wpi__dialog_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingEnd="@dimen/wpi__padding_medium"
            android:paddingLeft="@dimen/wpi__padding_medium"
            android:paddingRight="@dimen/wpi__padding_medium"
            android:paddingStart="@dimen/wpi__padding_medium"
            android:layout_marginBottom="@dimen/wpi__dialog_margin"
            android:textColor="@color/wpi__colorPrimary"
            android:textSize="@dimen/wpi__text_size_large"
            android:textStyle="bold"
            tools:text="Ini Judul" />

        <ViewStub
            android:id="@+id/wpi__dialog_stub"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

</FrameLayout>